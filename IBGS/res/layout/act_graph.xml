<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <!-- 상단 타이틀 부분 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_area"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/vi_net_dot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/net_dot"/>
            <ImageView
                android:id="@+id/vi_data_write"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/data_dot"/>
        </LinearLayout>
        <Button
            android:id="@+id/vi_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_type_01"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_gravity="right"
            android:text="×"/>
        <TextView
            android:id="@+id/vi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="text"/>
    </FrameLayout>

    <!-- 그려지는 부분 -->
    <my.home.ibgs.view.GraphView
        android:id="@+id/vi_draw_view"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#ffffff"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
    </my.home.ibgs.view.GraphView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/offset_area"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="오프셋 설정"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#0a187b"/>
            <Button
                android:id="@+id/vi_offset_btn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/btn_type_03"
                android:padding="5dp"
                android:textSize="12dp"
                android:text="적용"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A"
                android:textAlignment="center"
                android:textColor="#ff332200"/>
            <EditText
                android:id="@+id/vi_offset_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#66000000"
                android:text="0"
                android:inputType="numberSigned"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B"
                android:textAlignment="center"
                android:textColor="#ff332200"/>
            <EditText
                android:id="@+id/vi_offset_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#66000000"
                android:text="0"
                android:inputType="numberSigned"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:textAlignment="center"
                android:textColor="#ff332200"/>
            <EditText
                android:id="@+id/vi_offset_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#66000000"
                android:text="0"
                android:inputType="numberSigned"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 하단 줌 조정 부분 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bottom_area_type2"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:text="Record"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/vi_save_start"
                    android:layout_width="0px"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_minus"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:text="Start"/>
                <Button
                    android:id="@+id/vi_save_stop"
                    android:layout_width="0px"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_plus"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:visibility="gone"
                    android:text="Stop"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bottom_area_type2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="배율 x"/>
            <TextView
                android:id="@+id/vi_scale_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#a1a1a1"
                android:text="0"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/vi_scale_down"
                    android:layout_width="0px"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_minus"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:text="-"/>
                <Button
                    android:id="@+id/vi_scale_up"
                    android:layout_width="0px"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_plus"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:text="+"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
